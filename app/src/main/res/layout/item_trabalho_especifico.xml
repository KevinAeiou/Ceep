<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card"
    android:id="@+id/cardViewTrabalhoEspecifico">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutItemTrabalhoEspecifico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/itemNomeTrabaloEspecifico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:textSize="22sp"
                android:gravity="center"
                tools:text="Trabalho" />

            <TextView
                android:id="@+id/itemProfissaoTrabalhoEspecifico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="18sp"
                android:gravity="center"
                tools:text="Profissão" />

            <TextView
                android:id="@+id/itemRaridadeTrabalhoEspecifico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="18sp"
                android:gravity="center"
                tools:text="Raridade" />

            <TextView
                android:id="@+id/itemTrabalhoNecessarioTrabalhoEspecifico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="18sp"
                android:gravity="center"
                tools:text="Trabalho necessário" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/itemExperienciaTrabaloEspecifico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutItemTrabalhoEspecifico"
            app:layout_constraintStart_toStartOf="@id/linearLayoutItemTrabalhoEspecifico"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutItemTrabalhoEspecifico"
            tools:text="Experiência" />

        <TextView
            android:id="@+id/itemNivelTrabaloEspecifico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/itemExperienciaTrabaloEspecifico"
            app:layout_constraintTop_toTopOf="@id/itemExperienciaTrabaloEspecifico"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nivel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>