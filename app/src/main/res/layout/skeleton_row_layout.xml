<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/topText"
        android:layout_width="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:background="@drawable/skeleton"/>

    <View
        android:id="@+id/bottomText"
        android:layout_width="250dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/topText"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/topText"
        android:background="@drawable/skeleton"/>

    <View
        android:id="@+id/bottomText2"
        android:layout_width="200dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/bottomText"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/topText"
        android:background="@drawable/skeleton"/>

    <View
        android:id="@+id/nivelText"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomText2"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/skeleton"/>

</androidx.constraintlayout.widget.ConstraintLayout>